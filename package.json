{
    "name": "nodejs-express-api",
    "version": "1.0.0",
    "description": "Demo - Todo list api",
    "main": "index.js",
    "engines": {
        "node": "~v14.17.4",
        "npm": "~7.20.3"
    },
    "scripts": {
        "dev": "NODE_ENV=development nodemon ./src/index.js",
        "start": "NODE_ENV=production node ./src/index.js",
        "test": "NODE_ENV=test mocha --exit ./test/ --recursive",
        "testp": "NODE_ENV=test mocha --exit --",
        "test-pipeline": "NODE_ENV=test mocha --exit --reporter mocha-junit-reporter --reporter-options mochaFile=./test-reports/junit.xml ./test/",
        "swagger2json": "rm -f swagger.json & ./node_modules/swagger-jsdoc/bin/swagger-jsdoc.js -d src/swaggerDefinition.js src/swagger-doc/**/*.yml",
        "swagger2html": "rm -f ./public/swagger/index.html & src/scripts/swagger2html/index.js swagger.json ./public/swagger/index.html",
        "generate-swagger": "npm run swagger2json; npm run swagger2html",
        "apidoc": "rm -rf public/api-doc & ./node_modules/apidoc/bin/apidoc -i src/docs -o public/api-doc",
        "db-undo-migrate": "./node_modules/.bin/sequelize db:migrate:undo:all",
        "db-migrate": "./node_modules/.bin/sequelize db:migrate",
        "db-seed": "./node_modules/.bin/sequelize db:seed:all",
        "db-drop": "./node_modules/.bin/sequelize db:drop",
        "db-create": "./node_modules/.bin/sequelize db:create",
        "db-setup": "npm run db-undo-migrate && npm run db-migrate && npm run db-seed",
        "db-setup-fresh": "npm run db-drop && npm run db-create && npm run db-migrate && npm run db-seed"
    },
    "author": "RemoteCraftsmen",
    "license": "ISC",
    "dependencies": {
        "apidoc": "~0.28.1",
        "bcryptjs": "~2.4.3",
        "body-parser": "~1.19.0",
        "cors": "~2.8.5",
        "dayjs": "~1.10.6",
        "deepmerge": "~4.2.2",
        "dotenv": "~10.0.0",
        "express": "~4.17.1",
        "express-bearer-token": "~2.4.0",
        "express-validator": "~6.12.0",
        "helmet": "~4.6.0",
        "http-status-codes": "~2.1.4",
        "jsonwebtoken": "~8.5.1",
        "lodash": "~4.17.21",
        "node-dependency-injection": "~2.7.0",
        "nodemailer": "~6.6.2",
        "nodemailer-sendgrid": "~1.0.3",
        "pg": "~8.6.0",
        "pg-hstore": "~2.3.4",
        "sequelize": "~6.6.4",
        "sequelize-cli": "~6.2.0",
        "swagger-jsdoc": "~6.1.0",
        "uuid": "~8.3.2"
    },
    "devDependencies": {
        "chai": "~4.3.4",
        "faker": "~5.5.3",
        "mocha": "~9.0.2",
        "mocha-junit-reporter": "~2.0.0",
        "nodemon": "~2.0.9",
        "npm-run-all": "~4.1.5",
        "supertest": "~6.1.3"
    }
}
